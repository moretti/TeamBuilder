@using TeamBuilder
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - TeamBuilder</title>
    @Styles.Render("~/bundles/main-css")
    @Scripts.Render("~/bundles/main-js")

    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">TeamBuilder</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="@Html.MenuActiveLink("active", "Employee")">@Html.ActionLink("Employees", MVC.Employee.Index())</li>
                        <li class="@Html.MenuActiveLink("active", "Team")">@Html.ActionLink("Teams", MVC.Team.Index())</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
