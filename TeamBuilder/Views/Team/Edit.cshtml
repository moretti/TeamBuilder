@model TeamBuilder.ViewModels.EditTeamViewModel

@{
    ViewBag.Title = "Edit team";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form" }))
{
    <legend>Edit team</legend>
    
    <fieldset>
        @Html.EditorFor(x => x, "EditTeamViewModel")

        <div class="control-group">
            
            @Html.LabelFor(x => x.CreatedAt, new { @class = "control-label" })
            <div class="controls">
                <span>@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
    </fieldset>
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save changes</button>
        @Html.ActionLink("Cancel", MVC.Team.Index(), new { @class = "btn" })
    </div>
}